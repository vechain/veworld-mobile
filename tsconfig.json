{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "skipLibCheck": true,
        "types": ["node", "jest"],
        "paths": {
            "~*": ["./src/*"],
            "~app/*": ["./src/app/*"],
            "~Storage/*": ["./src/Storage/*"],
            "~Model/*": ["./src/Model/*"],
            "~Services/*": ["./src/Services/*"],
            "~Screens/*": ["./src/Screens/*"],
            "~Navigation/*": ["./src/Navigation/*"],
            "~Common/*": ["./src/Common/*"],
            "~Components/*": ["./src/Components/*"],
            "~i18n/*": ["./src/i18n/*"],
            "~Assets/*": ["./src/Assets/*"]

        }
    },
    "exclude": ["src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
