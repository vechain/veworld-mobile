{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "jsx": "react",
        "skipLibCheck": true,
        "types": ["node", "jest"],
        "paths": {
            "~*": ["./src/*"],
            "~Storage/*": ["./src/Storage/*"],
            "~Screens/*": ["./src/Screens/*"],
            "~Navigation/*": ["./src/Navigation/*"],
            "~Common/*": ["./src/Common/*"],
            "~Components/*": ["./src/Components/*"]
        }
    }
}
